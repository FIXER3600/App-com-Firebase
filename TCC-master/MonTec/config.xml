<?xml version='1.0' encoding='utf-8'?>
<widget id="com.jojo.montec" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>MonTec</name>
    <description>
        MonTec.
    </description>
    <author email="joao.veglione@gmail.com" href="http://cordova.io">
        Jojo
    </author>
	<icon src="res/icon.png" />
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
	<preference name="BackgroundColor" value="0x000000" />
	<preference name="GOOGLE_MAPS_ANDROID_API_KEY" value="AIzaSyA3eljGvK51_VnDWysAuDH9NTakJC0PCFU" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
